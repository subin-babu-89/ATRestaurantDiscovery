<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.alltrailsrestaurantdiscovery.ui.main.MainViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

        <ViewSwitcher
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/listFragment"
                android:name="com.example.alltrailsrestaurantdiscovery.ui.list.ListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.example.alltrailsrestaurantdiscovery.ui.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ViewSwitcher>

    </FrameLayout>
</layout>